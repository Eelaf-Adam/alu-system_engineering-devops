#!/usr/bin/env bash
# custom 404 page - fixed version

set -e

apt-get update
apt-get install -y nginx

# Ensure directory exists and create custom 404 page
mkdir -p /usr/share/nginx/html
echo "Ceci n'est pas une page" | sudo tee /usr/share/nginx/html/4-not_found_page_404.html > /dev/null

# Backup existing default site config
cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak

# Write a clear, correct default server config
cat <<'EOF' > /etc/nginx/sites-available/default
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm;

    server_name _;

    # Custom 404 page (internal location)
    error_page 404 /4-not_found_page_404.html;
    location = /4-not_found_page_404.html {
        root /usr/share/nginx/html;
        internal;
    }

    # Serve files; missing files produce 404 which triggers the error_page above
    location / {
        try_files $uri $uri/ =404;
    }
}
EOF

# Restart Nginx
service nginx restart
